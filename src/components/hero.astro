---
import { Picture } from "astro:assets";
import heroImage from "../assets/riptides.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip py-24">
  <Container>
    <main class="flex flex-col items-center text-center">
      <div class="max-w-3xl">
        <h1
          class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance]"
        >
          Trust Every Connection. Even the Autonomous Ones.
        </h1>
        <p
          class="text-lg mt-4 max-w-2xl mx-auto text-slate-600 [text-wrap:balance]"
        >
          Riptides is the non-human identity fabric for your workloads and AI agents.
        </p>
        <div
          class="mt-10 flex flex-col sm:flex-row justify-center gap-3"
        >
          <Link
            href="/contact"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener"
          >
            Join the Waitlist
          </Link>
        </div>
      </div>
      <div class="mt-12 max-w-6xl">
        <Picture
          src={heroImage}
          alt="Riptides platform"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 70vw"
          widths={[240, 540, 720, heroImage.width]}
          loading="eager"
          fetchpriority="high"
          class="w-full h-auto"
        />
      </div>
    </main>
  </Container>
</div>

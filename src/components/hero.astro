---
import { Picture } from "astro:assets";
import heroImage from "../assets/riptides.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 mt-10 place-items-center relative">
      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-3xl lg:text-4xl xl:text-6xl font-bold lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start"
        >
          Automatic Non-Human Identities for Secure Service Communication
        </h1>
        <p
          class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start"
        >
          Riptides is a comprehensive solution for securing workload-to-workload
          communication, with identity as its foundation.
        </p>
        <div
          class="mt-6 flex flex-col sm:flex-row sm:justify-center lg:justify-start gap-3"
        >
          <Link
            href="/contact"
            target="_blank"
            class="flex gap-1 items-center justify-center"
            rel="noopener"
          >
            Contact Us
          </Link>
        </div>
      </div>
      <div class="py-3 lg:col-span-3 lg:-mr-0 place-items-top">
        <Picture
          src={heroImage}
          alt="Riptides platform"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, heroImage.width]}
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </main>
  </Container>
</div>
